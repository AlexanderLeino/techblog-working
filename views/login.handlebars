<style>
  .login-card { 
    background-color: #321414;
    font-weight: 800; 
    font-size: 18px;
    padding-left: 10px; 
    padding-right: 10px; 
    padding-bottom: 10px; 
    border-radius: 25px; 
    } 

  
  .btn { background-color: white; 
  border: none; 
  color: black;
  font-weight: 900; 
  border-radius: 30px; 
  margin-top: 20px; 
  margin-left: auto; 
  } 
  .page-title { 
    text-align: center;
    font-weight: 800;
    font-size: 30px; } 
    
  .form-input { 
    border-radius: 10px; 
    align-content: center; 
    }
  
  .container{
    display: flex; 
    padding-top: 20px 


  }
  .inputBox {
    display: flex;
    flex-direction: column;
  }

  @media (max-width: 412px){
    .container {
      display: flex;
      flex-direction: column;
    }
    .signUp {
      margin-top: 20px;
    }
  }

